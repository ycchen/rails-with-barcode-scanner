<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Upc:</strong>
  <%= @product.upc %>
</p>

<p>
  <strong>Image url:</strong>
  <%= content_tag :p do %>
    <%= image_tag @product.image_url, class: 'img-responsive', width: 640, height: 480 %>
  <% end if @product.image_url.present? %>
</p>

